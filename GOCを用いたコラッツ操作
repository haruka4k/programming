def find_first_6n4_fixed(n):
    steps = []
    while n % 6 != 4:
        steps.append(n)
        if n % 2 == 0:
            n //= 2
        else:
            n = 3 * n + 1
    steps.append(n)
    return n, steps

def gco_step_modified_r3_new(a):
    if a % 2 == 1:
        return (3 * a + 1) // 2, "R1"
    elif a % 4 == 0:
        return (3 * a) // 4, "R2"
    elif a % 4 == 2:
        return (a - 2) // 4, "R3"
    else:
        return a, "Invalid"

def generate_gco_sequence_modified_r3_new(n_start, max_steps=1000):
    first_n, pre_steps = find_first_6n4_fixed(n_start)
    a = (first_n - 4) // 6
    gco_seq = [6 * a + 4]
    gco_rules = []

    seen = set()
    steps = 0

    while a != 0 and a not in seen and steps < max_steps:
        seen.add(a)
        a_next, rule = gco_step_modified_r3_new(a)
        if rule == "Invalid":
            break
        a = a_next
        gco_seq.append(6 * a + 4)
        gco_rules.append(rule)
        steps += 1

    if a == 0:
        gco_seq.extend([2, 1])
        gco_rules.extend(["â†’2", "â†’1"])
    elif a in seen:
        gco_seq.append(6 * a + 4)
        gco_rules.append("âŸ³")

    return pre_steps, gco_seq, gco_rules

def print_gco_sequence_summary(n_start, pre_steps, gco_seq, gco_rules):
    summary = f"åˆæœŸå€¤: {n_start}, ç·ã‚¹ãƒ†ãƒƒãƒ—æ•°: {len(pre_steps) - 1 + len(gco_rules) + 2 if gco_seq[-2:] == [2, 1] else 0}"
    normal_part = " â†’ ".join(str(n) for n in pre_steps)
    compressed_parts = []
    for i in range(len(gco_rules)):
        arrow = "â†’â‚" if gco_rules[i] == "R1" else "â†’â‚‚" if gco_rules[i] == "R2" else "â†’â‚ƒ" if gco_rules[i] == "R3" else gco_rules[i]
        compressed_parts.append(f"{gco_seq[i]} {arrow}")
    compressed_parts.append(str(gco_seq[-1]))
    compressed_output = " ".join(compressed_parts)
    return summary, normal_part, compressed_output

# ðŸ”· ãƒ¡ã‚¤ãƒ³å‡¦ç†
if __name__ == "__main__":
    try:
        n_input = int(input("åˆæœŸå€¤ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„ï¼ˆè‡ªç„¶æ•°ï¼‰: "))
        pre_steps, gco_seq, gco_rules = generate_gco_sequence_modified_r3_new(n_input)
        summary, normal_part, compressed_output = print_gco_sequence_summary(n_input, pre_steps, gco_seq, gco_rules)

        print("\nðŸ§¾ æ¦‚è¦:")
